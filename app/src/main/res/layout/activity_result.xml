<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ashi.cross_code.result">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/result"
        android:textColor="#4d5fbe"
        android:text="Successfull Submission !"
        android:gravity="center"
        android:textSize="30sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_marginTop="20dp"
        android:text="Thank you for your Participation.
 See you at Prodigy 18"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="148dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/prodigy" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#000"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:text="Team Cross-Code"/>
</LinearLayout>
